@model QuizMVC.Application.CategoryAndQuestionVm.NewCategoryVm

@{
    ViewData["Title"] = "AddNewCategory";
}

<center><h1 style="color:crimson">Dodaj nową kategorię</h1></center>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bolder" style="color:darkgoldenrod">Nazwa nowej kategorii</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-danger" asp-controller="Home" asp-action="ShowMenuForUser">Powrót do menu głównego</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
