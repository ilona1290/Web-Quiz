@model QuizMVC.Application.CategoryAndQuestionForAdminVm.AddAndEditCategoryAdminVm

@{
    ViewData["Title"] = "EditCategory";
}

<center><h1 style="color:darkblue">Edytujesz kategorię: @Model.Name</h1></center>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bolder" style="color:darkred">Nowa nazwa kategorii</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="IsAccepted" />
                <label class="form-check-label font-weight-bolder" style="color:green">Akceptuj</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-danger" asp-action="ShowCategoriesForAdmin">Wróć do listy z kategoriami</a>
</div>

